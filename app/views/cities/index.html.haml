%h1= t('app.city.index')

%table.table.table-hover.table-striped.center
  %caption
    .pull-right
      = link_to t('app.city.new-button'), new_city_path, class: 'btn btn-primary'
  %thead
    %tr
      %th= City.human_attribute_name(:name)
      %th.p50
      %th.p50
      %th.p50

  %tbody
    - @cities.each do |city|
      %tr
        %td= city.name
        %td
          = link_to city, class: 'btn btn-success' do
            = fa_icon :eye
        %td
          = link_to edit_city_path(city), class: 'btn btn-info' do
            = fa_icon :edit
        %td
          = link_to city, :method => :delete, :data => { :confirm => t('helpers.sure') }, class: 'btn btn-danger' do
            = fa_icon :times
