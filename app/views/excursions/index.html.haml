%h1= t('app.excursion.index')

%table.table.table-hover.table-striped.center
  %caption
    .pull-right
      = link_to t('app.excursion.new-button'), new_excursion_path, class: 'btn btn-primary'
  %thead
    %tr
      %th= Excursion.human_attribute_name(:name)
      %th= Excursion.human_attribute_name(:price)
      %th= Excursion.human_attribute_name(:city)
      %th= Excursion.human_attribute_name(:descr)
      %th.p50
      %th.p50
      %th.p50

  %tbody
    - @excursions.each do |excursion|
      %tr
        %td= excursion.name
        %td= excursion.price
        %td= excursion.city.name
        %td= excursion.descr
        %td
          = link_to excursion, class: 'btn btn-success' do
            = fa_icon :eye
        %td
          = link_to edit_excursion_path(excursion), class: 'btn btn-info' do
            = fa_icon :edit
        %td
          = link_to excursion, :method => :delete, :data => { :confirm => t('helpers.sure') }, class: 'btn btn-danger' do
            = fa_icon :times
